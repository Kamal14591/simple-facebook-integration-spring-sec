package com.redleafbooks.page.home;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.RequestMapping;

import com.google.common.collect.Iterables;
import com.redleafbooks.core.domain.Book;
import com.redleafbooks.core.repository.BookRepository;

@Controller
public class HomeController {

	@Autowired
	private BookRepository bookRepo;

	@RequestMapping(value={"", "/", "/home"})
	public String home(Model model) {
		Iterable<Book> books = this.bookRepo.findAll();
		model.addAttribute("name", Iterables.size(books));
		return "home/index";
	}

}
